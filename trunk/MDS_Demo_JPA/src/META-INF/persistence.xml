<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="ERP_ORCL" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>		
		<class>org.erp.ProductNom</class>
		<class>org.erp.SalesInvoices</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@192.168.10.115:1521:ORCL"/>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
			<property name="javax.persistence.jdbc.user" value="erpdemo"/>
			<property name="javax.persistence.jdbc.password" value="erpdemo"/>
			
         	<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
         	<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>		
	</persistence-unit>
	
	<persistence-unit name="CRM_PG" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.crm.CustomerProfile</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://192.168.10.68:5432/postgres"/>
			<property name="javax.persistence.jdbc.user" value="crmdemo"/>
			<property name="javax.persistence.jdbc.password" value="crmdemo"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			
         	<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
         	<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
	
	<persistence-unit name="ACCESS_LOCAL" transaction-type="RESOURCE_LOCAL">
			<provider>org.hibernate.ejb.HibernatePersistence</provider>
			<class>org.office.access.ProductCategory</class>
			<class>org.office.access.ProductInCategories</class>
			<exclude-unlisted-classes>true</exclude-unlisted-classes>
			<properties>
	            <property name="hibernate.connection.url" value="jdbc:ucanaccess://E:/Professional/NextData/MDS-Demo-Data/OfficeDataSource/MDSDemoAccessDB.accdb;" />
	            <property name="hibernate.connection.driver_class" value="net.ucanaccess.jdbc.UcanaccessDriver"/>
	            
	            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
	            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	        </properties>			
	</persistence-unit>	
	
	 
	<persistence-unit name="XLS_LOCAL" transaction-type="RESOURCE_LOCAL">
				<provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
				
				<class>org.office.xls.AdvertisingExpense</class>
				<exclude-unlisted-classes/>
				<properties>
		            <property name="javax.persistence.jdbc.url" value="odf:file://E:/Professional/NextData/MDS-Demo-Data/OfficeDataSource/ExcelTestAccess.ods"/>
		            
		            <property name="datanucleus.autoCreateSchema" value="true"/>
		            <property name="datanucleus.autoCreateTables" value="true"/>
		            <property name="datanucleus.autoCreateColumns" value="true"/>
		            <property name="datanucleus.autoCreateConstraints" value="true"/>
		            
		            <property name="javax.jdo.option.Mapping" value="odf"/>
		            
		            <property name="datanucleus.jpa.addClassTransformer" value="true"/>
		            <property name="datanucleus.validateTables" value="true"/>
		            <property name="datanucleus.validateConstraints" value="true"/>
       	 		</properties>			
	</persistence-unit>	
	
</persistence>
